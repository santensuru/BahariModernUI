<UserControl x:Class="BahariModernUI.Pages.Personality.Logout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="Reload">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock x:Name="name" Style="{StaticResource Heading2}" Margin="0,0,0,8" />
                <TextBlock x:Name="score" />
                <Image x:Name="photo" />
                    
                <TextBlock Text="" Margin="0,8,0,8" />
                
                <TextBlock Text="LOGOUT" Style="{StaticResource Heading2}" Margin="0,0,0,8" />
                <TextBlock Text="Are you sure to logout?" />
                <Button Click="Logout_Click" Margin="0,8,0,0">Logout</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
