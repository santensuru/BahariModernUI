<UserControl x:Class="BahariModernUI.Pages.AppendixPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <!-- TODO: set @SelectedSource -->
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Appendix/SeaWater.xaml" >
            <mui:ModernTab.Links>
                <!-- TODO: set @Source -->
                <mui:Link x:Name="fresh"  Source="/Pages/Appendix/FreshWater.xaml" />
                <mui:Link x:Name="sea" Source="/Pages/Appendix/SeaWater.xaml" />
                <mui:Link x:Name="reef" Source="/Pages/Appendix/Reef.xaml" />
                <mui:Link x:Name="conservation" Source="/Pages/Appendix/ConservationArea.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
