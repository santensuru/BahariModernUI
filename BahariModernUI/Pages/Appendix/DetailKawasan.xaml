<mui:ModernDialog x:Class="BahariModernUI.Pages.Appendix.DetailKawasan"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300"
                  Title="ModernDialog">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Image Grid.Column="0" x:Name="image" Width="200" Height="200" Stretch="UniformToFill" />
                <TextBlock Text="KETERANGAN" Style="{StaticResource Heading2}" Margin="0,8,0,8" />
                <TextBlock x:Name="keterangan" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>

</mui:ModernDialog>
